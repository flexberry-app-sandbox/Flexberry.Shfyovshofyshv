<h3 class="ui header">{{t "forms.i-i-s-shfyovshofyshv-сланцы-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.кодСланцев
      class=(if (v-get validationModel "кодСланцев" "isInvalid") "error")
      label=(t "forms.i-i-s-shfyovshofyshv-сланцы-e.кодСланцев-caption")
      data-test-i-i-s-shfyovshofyshv-сланцы-e-кодСланцев=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "кодСланцев" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.наименование
      class=(if (v-get validationModel "наименование" "isInvalid") "error")
      label=(t "forms.i-i-s-shfyovshofyshv-сланцы-e.наименование-caption")
      data-test-i-i-s-shfyovshofyshv-сланцы-e-наименование=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "наименование" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.стоимость
      class=(if (v-get validationModel "стоимость" "isInvalid") "error")
      label=(t "forms.i-i-s-shfyovshofyshv-сланцы-e.стоимость-caption")
      data-test-i-i-s-shfyovshofyshv-сланцы-e-стоимость=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "стоимость" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-shfyovshofyshv-сланцы-e.харСланцев-caption"}}</label>
    {{flexberry-groupedit
      componentName="харСланцевGroupEdit"
      mainModelProjection=modelProjection
      modelProjection=modelProjection.attributes.харСланцев
      content=model.харСланцев
      readonly=readonly
      orderable=false
      class=(if (v-get validationModel "харСланцев" "isInvalid") "error")
      data-test-i-i-s-shfyovshofyshv-сланцы-e-харСланцев=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "харСланцев" "message")}}
  </div>
</form>
